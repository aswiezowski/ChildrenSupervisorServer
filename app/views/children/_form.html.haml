= render 'layouts/return'
.children-wrapper
  .child
    .image-wrap
      = simple_form_for @child, url: parent_children_path, html: { multipart: true } do |f|
        .row
          .col-md-12.text-center
            = f.error_notification
        .row
          .col-md-12.text-center
            .form-group.text-center
              %h4 Your child profile image:
              .img-circle
                = profile_avatar_select(@child)
              = f.file_field :avatar, onChange: 'loadFile(event)'
        .row
          .col-md-12
            .form-group.text-center
              = f.input :name, label: false, placeholder: 'Child name'
            .form-group.text-center
              = f.input :age, label: false, placeholder: 'Child age'
        .form-group.text-center
          = f.button :submit, class: 'btn-success btn-block'
